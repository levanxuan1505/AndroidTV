<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
  <FrameLayout
      android:id="@+id/container"
      android:layout_width="match_parent"
      android:nextFocusRight="@id/blfNavBar"
      android:layout_height="match_parent"
      />
    <androidx.leanback.widget.BrowseFrameLayout
        android:id="@+id/blfNavBar"
        android:layout_width="50dp"
        android:background="#000000"
        android:nextFocusLeft="@id/container"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="75dp"
            android:orientation="vertical"
            tools:ignore="ExtraText">

            <TextView
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="@drawable/selector_menu"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="16dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:text="Search"
                android:textColor="@color/text_selector_white_grey"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_home"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/selector_menu"
                android:drawableLeft="@drawable/ic_home"
                android:drawablePadding="16dp"
                android:layout_weight="1"
                android:focusable="true"
                android:gravity="center_vertical"
                android:text="Home"
                android:textColor="@color/text_selector_white_grey"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_movies"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/selector_menu"
                android:drawableLeft="@drawable/ic_movies"
                android:drawablePadding="16dp"
                android:layout_weight="1"
                android:focusable="true"
                android:gravity="center_vertical"
                android:text="Movies"
                android:textColor="@color/text_selector_white_grey"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_tv"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/selector_menu"
                android:drawableLeft="@drawable/ic_tv"
                android:drawablePadding="16dp"
                android:layout_weight="1"
                android:focusable="true"
                android:gravity="center_vertical"
                android:text="TV"
                android:textColor="@color/text_selector_white_grey"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_sports"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="@drawable/selector_menu"
                android:drawableLeft="@drawable/ic_sport"
                android:drawablePadding="16dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:text="Sports"
                android:textColor="@color/text_selector_white_grey"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_settings"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="@drawable/selector_menu"
                android:drawableLeft="@drawable/ic_settings"
                android:drawablePadding="16dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:text="Settings"
                android:textColor="@color/text_selector_white_grey"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_languages"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="@drawable/selector_menu"
                android:drawableLeft="@drawable/ic_languages"
                android:drawablePadding="16dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:text="Languages"
                android:textColor="@color/text_selector_white_grey"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.leanback.widget.BrowseFrameLayout>

</merge>